<%if @movies.present?%>
  <% @movies.each do |movie| %>
    <section class="movie">
      <div class="summary">
        <h2>
          <%= link_to(movie.title, movie) %>
        </h2>
        <div class="image">
          <%= image_tag movie.image_file_name %>
        </div>
        <h3>
          <%= total_gross(movie) %>
        </h3>
        <span class="stars">
      <%= render "shared/stars", percent: movie.stars_to_percentage %>
    </span>
        <p>
          <%= truncate(movie.description, length: 150, separator: ' ') %>
        </p>
      </div>
    </section>
  <% end %>

  <% if current_user_admin? %>
    <section class="admin">
      <%= link_to "Add New Movie", new_movie_path, class: "button" %>
    </section>
  <% end %>
<% else %>
  <h1>No Movies</h1>

<% end %>